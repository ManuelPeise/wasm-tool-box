
<EditForm Model="@LoginModel" class="p-3 login-form-container" OnSubmit="@OnLogin">
    <div class="form-group p-3">
        <input id="auth-login-email"
               class="form-control login-input"
               type="email" placeholder="Email"
               @bind-value="@LoginModel.EmailAdress">
    </div>
    <div class="form-group p-3">
        <input id="auth-login-password"
               class="form-control login-input"
               type="password" placeholder="Passwort"
               @bind-value="@LoginModel.Password">
    </div>
    <div class="form-group d-flex justify-content-end p-3">
        <button id="auth-login-btn"
                class="btn text-white"
                type="submit">
            Anmelden
        </button>
    </div>
</EditForm>